//- basic layout
//- use this by extend layout/basic.jade
//- init mixin
include ../mixin/meta

doctype html
html

	head
		//- set charset, should before title
		meta(charset='utf-8')

		//- unknown..
		meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')

		title= title

		block meta
			+meta({a: 'b'})

		block style
			link(href='style.css' rel='stylesheet')

		//- sync scripts which block document
		block sync-script

		//- normal script
		block script
			script(async src='app.js')

	body
